@model IEnumerable<CxCSystem.Models.Transacciones>

@{
    ViewBag.Title = "Transacciones";
}

<h2>Transacciones</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("ID Transaccion")
        </th>
        <th>
            @Html.Label("Tipo de movimiento")
        </th>
        <th>
            @Html.Label("Numero de documento")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.Label("Clientes")
        </th>
        <th>
            @Html.Label("Tipo de documentos")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_transaccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Mov)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Num_doc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clientes.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipos_Documentos.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
